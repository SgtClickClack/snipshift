{
  "name": "hospogo-api",
  "version": "1.0.0",
  "private": true,
  "main": "_src/index.ts",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "postinstall": "tsc && node fix-imports.js",
    "start": "tsx _src/server.ts",
    "start:migrate": "npm run db:migrate && npm start",
    "db:migrate": "tsx _src/scripts/apply-migration.ts || echo 'No migrations to apply'",
    "build": "tsc && node fix-imports.js",
    "seed:plans": "ts-node _src/scripts/seed-plans.ts",
    "seed:data": "tsx scripts/seed-data.ts",
    "migrate:onboarding": "ts-node _src/scripts/migrate-onboarding.ts",
    "db:push": "drizzle-kit push",
    "db:push:force": "drizzle-kit push --force",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:check": "ts-node _src/scripts/check-db.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    "db:clean": "ts-node _src/scripts/seed-clean.ts",
    "db:wipe-mock-shifts": "ts-node _src/scripts/wipe-mock-shifts.ts",
    "db:apply-migration": "ts-node _src/scripts/apply-migration.ts",
    "db:apply-shifts": "ts-node _src/scripts/apply-migration.ts 0003_add_shifts_final.sql",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:integration": "npm run test:db:up && vitest run --config vitest.config.ts && npm run test:db:down",
    "dev:db:up": "docker-compose -f docker-compose.dev.yml up -d --remove-orphans",
    "dev:db:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:db:reset": "docker-compose -f docker-compose.dev.yml down -v"
  },
  "dependencies": {
    "@react-email/components": "^1.0.1",
    "@react-email/render": "^2.0.0",
    "@types/multer": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^13.6.0",
    "multer": "^2.0.2",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^6.5.2",
    "socket.io": "^4.8.1",
    "stripe": "^20.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.13",
    "drizzle-kit": "^0.31.7",
    "esbuild": "^0.27.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3",
    "vitest": "^4.0.13"
  }
}
