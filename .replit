modules = ["nodejs-20", "web", "postgresql-16"]
run = "docker-compose up --build"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["google-cloud-sdk", "glib", "gtk3", "nss", "dnsutils", "openssh_hpn", "stripe-cli", "imagemagick"]

[deployments]
[[deployments.releases]]
  name = "production-api"
  # The command to build the application
  build = ["npm", "--prefix", "snipshift-next/api", "run", "build"]
  # The command to run the application after building
  run = ["npm", "--prefix", "snipshift-next/api", "run", "start:container"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 4000
externalPort = 4000

[[ports]]
localPort = 5432
externalPort = 5432

[env]
PORT = "4000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SnipShift 2.0 API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SnipShift 2.0 Web"

[[workflows.workflow]]
name = "SnipShift 2.0 API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd snipshift-next/api && npm run dev"
waitForPort = 4000

[[workflows.workflow]]
name = "SnipShift 2.0 Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd snipshift-next/web && npm run dev"
waitForPort = 3000

[agent]
integrations = ["javascript_object_storage==1.0.0", "javascript_database==1.0.0", "javascript_stripe==1.0.0", "javascript_log_in_with_replit==1.0.0"]
