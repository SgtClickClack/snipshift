# Snipshift Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# Required for production - PostgreSQL connection string
# Example: postgresql://username:password@host:port/database
DATABASE_URL=

# Session Configuration
# Required - Generate a strong random secret for production
# Example: openssl rand -base64 32
SESSION_SECRET=dev-secret-change-me

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# Security Configuration
# Disable CSRF for development/testing (set to '1' to disable)
DISABLE_CSRF=0

# Testing Configuration
# Set to '1' to enable E2E test mode
E2E_TEST=0
CI=false

# Google OAuth Configuration (Optional)
# Required for Google authentication
VITE_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_ID=
VITE_GOOGLE_REDIRECT_URI=https://www.snipshift.com.au/oauth/callback

# Google Maps API (Optional)
# Required for map features
VITE_GOOGLE_MAPS_API_KEY=

# Firebase Configuration (Optional)
# Required for Firebase features
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_PROJECT_ID=

# Stripe Configuration (Optional)
# Required for payment processing
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Email Configuration (Optional)
# Required for email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Development Configuration
# Disable Vite in development (set to '1' to disable)
DISABLE_VITE=0
