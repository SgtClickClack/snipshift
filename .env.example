# ============================================
# HospoGo Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173
# Optional: API base URL when frontend and API are on different hosts (e.g. https://api.hospogo.com).
# Leave unset for same-origin (relative /api/*).
# VITE_API_URL=https://api.hospogo.com

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/hospogo
# Alternative: Some platforms use POSTGRES_URL
# POSTGRES_URL=postgresql://user:password@localhost:5432/hospogo

# ============================================
# Firebase Configuration (Backend)
# ============================================
# Option 1: Service Account JSON (recommended for production)
# Paste the entire JSON service account key as a single line
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# Option 2: Individual Firebase credentials (alternative)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_APP_NAME=hospogo-worker-v2

# ============================================
# Firebase Configuration (Frontend - VITE_)
# ============================================
# For project snipshift-75b04: PROJECT_ID and MESSAGING_SENDER_ID must match exactly
# or push/token cleanup can return 400 and break logout/dashboard.
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
# CRITICAL: Auth domain for Firebase redirect flow
# For custom domains (hospogo.com), set this to your custom domain
# For default Firebase hosting, use your-project.firebaseapp.com
# This MUST be listed in Firebase Console > Authentication > Settings > Authorized domains
VITE_FIREBASE_AUTH_DOMAIN=hospogo.com
# Google Tag Manager ID (optional, falls back to VITE_FIREBASE_MEASUREMENT_ID if not set)
VITE_GTM_ID=G-XXXXXXXXXX
VITE_GOOGLE_REDIRECT_URI=https://hospogo.com/auth/callback
# Google Maps: used by src/lib/google-maps.ts and location-input. In Google Cloud Console:
# - Enable "Maps JavaScript API" and "Places API (New)" for this project.
#   (The legacy "Places API" can return 403; use "Places API (New)" to avoid permanent 403s.)
# - Under API key restrictions, add HTTP referrer(s) for your app (e.g. http://localhost:5173/*, https://yourdomain.com/*).
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# Stripe Configuration
# ============================================
# Stripe Secret Key (from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# Stripe Webhook Secret (from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# Stripe Publishable Key (Frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# Pusher Configuration
# ============================================
# Pusher credentials (from Pusher Dashboard)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2
# Frontend Pusher configuration
VITE_PUSHER_APP_KEY=your-pusher-key
VITE_PUSHER_CLUSTER=us2

# ============================================
# Email Configuration (Resend)
# ============================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=HospoGo <noreply@hospogo.com>
ADMIN_EMAIL=sales@hospogo.com

# ============================================
# Admin Configuration
# ============================================
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin1@hospogo.com,admin2@hospogo.com

# ============================================
# Business Logic Configuration
# ============================================
# Commission rate (0.10 = 10%, 0.15 = 15%, etc.)
HOSPOGO_COMMISSION_RATE=0.10
# Legacy commission rate (fallback)
SNIPSHIFT_COMMISSION_RATE=0.10
# Maximum radius in meters for clock-in geofencing
CLOCK_IN_MAX_RADIUS_METERS=200

# ============================================
# Logging & Monitoring
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
# Notification provider: console, email, etc.
NOTIFICATION_PROVIDER=console

# ============================================
# Error Reporting (Optional)
# ============================================
# Option 1: Sentry (recommended for production)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Option 2: LogSnag
# LOGSNAG_API_KEY=your-logsnag-api-key
# LOGSNAG_PROJECT=hospogo

# If neither is set, errors will be logged to console

# ============================================
# Testing Configuration
# ============================================
# Set to '1' to enable E2E testing mode (disables real-time connections)
VITE_E2E=0
# Set to '1' to enable demo mode (bypasses auth loading gate for demo purposes)
# WARNING: Never set this in production - it will break real authentication
VITE_DEMO_MODE=0

# ============================================
# Deployment Configuration
# ============================================
# Set by Vercel automatically (don't set manually)
# VERCEL=1
# VERCEL_URL=your-app.vercel.app
