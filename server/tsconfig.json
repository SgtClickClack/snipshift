{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "../../dist/server",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["../../node_modules/*", "../snipshift-next-restored/api/src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

