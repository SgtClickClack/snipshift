# SnipShift 2.0 Platform Environment Variables
# Copy this file to .env and fill in your actual values
# For Replit: Set these as "Secrets" in your Replit workspace

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=4000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development with Docker Compose
DATABASE_URL=postgresql://snipshift:snipshift_password@postgres:5432/snipshift
# For local development without Docker
# DATABASE_URL=postgresql://snipshift:snipshift_password@localhost:5432/snipshift
POSTGRES_PASSWORD=snipshift_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# For local development with Docker Compose
REDIS_URL=redis://redis:6379
# For local development without Docker
# REDIS_URL=redis://localhost:6379

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8081

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# GOOGLE OAUTH (Required for Google authentication)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# STRIPE PAYMENTS (Required for payment processing)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# SENDGRID EMAIL (Required for email notifications)
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# FIREBASE (Required for file storage and notifications)
# =============================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com

# =============================================================================
# GOOGLE CLOUD STORAGE (Required for file uploads)
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket-name

# =============================================================================
# NEXT.JS WEB APP CONFIGURATION
# =============================================================================
# For local development with Docker Compose
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:4000/graphql
NEXT_PUBLIC_ENVIRONMENT=development

# Internal API configuration for Docker services
API_URL=http://api:4000
GRAPHQL_URL=http://api:4000/graphql
NEXT_PUBLIC_GRAPHQL_URL=/graphql
WS_URL=ws://api:4000/graphql

# =============================================================================
# GOOGLE MAPS API (Required for location features)
# =============================================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# PRODUCTION DEPLOYMENT URLS (for production builds)
# =============================================================================
# NEXT_PUBLIC_API_URL=https://api.snipshift.com/graphql
# NEXT_PUBLIC_WS_URL=wss://api.snipshift.com/graphql
# DATABASE_URL=postgresql://user:password@production-db-host:5432/snipshift
# REDIS_URL=redis://production-redis-host:6379
# CORS_ORIGIN=https://www.snipshift.com.au,https://app.snipshift.com.au

# =============================================================================
# REPLIT SPECIFIC CONFIGURATION
# =============================================================================
# These variables are automatically set by Replit
# REPL_ID=your-repl-id
# REPL_OWNER=your-username
# REPL_SLUG=snipshift-2-0

