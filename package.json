{
  "name": "hospogo-web",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "description": "Hospitality shift-filling marketplace platform",
  "scripts": {
    "dev": "vite",
    "start": "npm run dev",
    "build": "vite build",
    "test:auth-check": "cd api && npx vitest run --config vitest.config.auth-check.ts _src/tests/authCheck.test.ts",
    "test:auth-check:skip": "echo Skipping auth-check test in CI environment",
    "prevercel-build": "node scripts/skip-test-if-vercel.cjs || npm run test:auth-check:skip",
    "vercel-build": "vite build",
    "lint": "eslint src api --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preflight": "node scripts/preflight.cjs",
    "preflight:local": "node scripts/preflight.cjs --local",
    "preview": "vite preview",
    "dev:all": "concurrently -n \"FRONTEND,API\" -c \"blue,green\" \"npm run dev\" \"cd api && npm start\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "db:clean": "cd api && npm run db:clean",
    "db:audit:test": "npx tsx scripts/audit-test-db.ts",
    "db:seed:test": "npx tsx scripts/seed-test-db.ts",
    "db:migrate:test": "npx tsx scripts/migrate-test-db.ts",
    "test:readiness": "npx tsx scripts/test-readiness.ts",
    "test:readiness:force": "npx tsx scripts/test-readiness.ts --force-seed",
    "verify:onboarding-recovery": "npx tsx scripts/verify-onboarding-recovery.ts"
  },
