{
  "name": "snipshift-api",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "build": "cd snipshift-next/api && npm ci --production=false && npm run build",
    "copy-build": "node copy-build.js",
    "build:client": "vite build --outDir dist/public",
    "build:server": "tsc server/index.ts --outDir dist/server --target es2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "build:api": "cd snipshift-next/api && npm run build",
    "start": "cd snipshift-next/api && node dist/index.js",
    "start:dev": "tsx server/index.ts",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch:jest": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathIgnorePatterns=tests/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:error-handling": "playwright test --config=tests/error-handling.config.ts",
    "test:error-handling:ui": "playwright test --config=tests/error-handling.config.ts --ui",
    "test:error-handling:headed": "playwright test --config=tests/error-handling.config.ts --headed",
    "test:error-handling:debug": "playwright test --config=tests/error-handling.config.ts --debug",
    "test:error-handling:report": "playwright show-report playwright-report-error-handling",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:error-handling",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:smoke": "cypress run --spec \"cypress/e2e/smoke-tests.cy.ts\"",
    "cypress:run:journey": "cypress run --spec \"cypress/e2e/00-journey-based-test-runner.cy.ts\"",
    "cypress:run:auth": "cypress run --spec \"cypress/e2e/01-authentication-user-management.cy.ts\"",
    "cypress:run:shifts": "cypress run --spec \"cypress/e2e/02-shift-marketplace.cy.ts\"",
    "cypress:run:social": "cypress run --spec \"cypress/e2e/03-social-features-community.cy.ts\"",
    "cypress:run:tournaments": "cypress run --spec \"cypress/e2e/11-tournament-system.cy.ts\"",
    "cypress:component:open": "cypress open --component",
    "cypress:component:run": "cypress run --component",
    "test:fast": "cypress run --spec \"cypress/e2e/smoke-tests.cy.ts\" --config defaultCommandTimeout=5000,requestTimeout=5000,responseTimeout=5000",
    "test:single": "cypress run --spec",
    "test:watch": "cypress open --config watchForFileChanges=true",
    "test:debug": "cypress open --config watchForFileChanges=true,defaultCommandTimeout=60000"
  },
  "dependencies": {
